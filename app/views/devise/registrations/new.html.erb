<div class="auth d-flex flex-column align-items-center justify-content-center flex-fill">
  <div class="auth-form">
    <div class="auth-title">Sign up</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: "email", class: "form-control auth-input" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control auth-input" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation", class: "form-control auth-input" %>
      <%= f.submit "Sign up", class: "btn auth-btn" %>
    <% end %>
  </div>
  <div class="auth-links text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
