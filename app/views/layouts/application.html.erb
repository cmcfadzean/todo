<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="d-flex flex-fill">

  <%= yield %>

  <p id="notice" class="notice <%= notice ? "notice-show" : ""%>"><%= notice %></p>
  <p id="alert" class="alert <%= alert ? "alert-show" : ""%>"><%= alert %></p>

</body>
</html>
